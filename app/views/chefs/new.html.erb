<%= render 'shared/page_title', title: "Sign up for the application" %>

<%= render 'shared/errors', obj: @chef %>


<div class="container">
	<%= form_for(@chef, :html => {role: "form"}) do |f| %>

		<div class="form-group row justify-content-center">
			<label class="col-1 form-control-label text-right">
			 	<strong><%= f.label :chefname, "Name" %></strong>
			</label>

			<div class="col-8">
			    <%= f.text_field :chefname, class: "form-control", placeholder: "Enter your name", autofocus: true %>
			</div>
		</div>

		<div class="form-group row justify-content-center">
			<label class="col-1 form-control-label text-right">
				<strong><%= f.label :email %></strong>
			</label>

			<div class="col-8">
			<%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
			</div>
		</div>


		<div class="form-group row justify-content-center">
			<label class="col-1 form-control-label text-right">
				<strong><%= f.label :password %></strong>
			</label>

			<div class="col-8">
			<%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
			</div>
		</div>


		<div class="form-group row justify-content-center">
			<label class="col-1 form-control-label">
				<strong><%= f.label :password_confirmation, "Confirm Password" %></strong>
			</label>

			<div class="col-8">
			<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
			</div>
		</div>


		<div class="form-group row col-8">
			<div class="offset-4">
			<%= f.submit "Create my account", class: "btn btn-primary btn-xlarge" %>
			</div>
		</div>

		<div class="col-md-4 offset-4 colormatch">
			[<%= link_to "Cancel request and return to recipes listing",recipes_path %>]
		</div>

	<% end %>
</div>




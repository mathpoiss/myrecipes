<%= render 'shared/errors', obj: @recipe %>


<div class="container">
	<%= form_for(@recipe, :html => {role: "form"}) do |f| %>

		<div class="form-group row justify-content-center">
			<label class="col-1 form-control-label text-right">
			 	<strong><%= f.label :name %></strong>
			</label>

			<div class="col-8">
			    <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
			</div>
		</div>

		<div class="form-group row justify-content-center">
			<label class="col-1 form-control-label text-right">
				<strong><%= f.label :description %></strong>
			</label>

			<div class="col-8">
			<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create recipe" %>
			</div>
		</div>

		<div class="form-group row col-8">
			<div class="offset-4">
				<%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |cb| %>

					<label class="custom-control custom-checkbox">
						<span class="custom-control-description">
						<%= cb.label {cb.check_box(class: "custom-control-indicator") + cb.text} %>
						</span>
					</label>
				<% end %>
			</div>
		</div>

		<div class="form-group row col-8">
			<div class="offset-4">
				<%= f.submit "Sign up", class: "btn btn-primary btn-xlarge" %>
			</div>
		</div>

		<div class="col-md-4 offset-4 colormatch">
			[<%= link_to "Cancel request and return to recipes listing",recipes_path %>]
		</div>

	<% end %>
</div>




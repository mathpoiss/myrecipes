<div class="row mb-3">
	<div class="col-md-2 text-center">
		<section class="center_chef_img">
			<%= gravatar_for(comment.chef, size: 60) %>
		</section>
	</div>

	<div class="col-md-8">
		<div class="card">
			<p><%= comment.description %></p>
			<p>
				<span class="quiet"><small>Created: <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.chef.chefname %></small></span>
			</p>
		</div>
	</div>
</div>